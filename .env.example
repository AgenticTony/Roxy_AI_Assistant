# ============================================
# Roxy — Environment Configuration
# Copy this to .env and fill in your values
# NEVER commit .env to version control
# ============================================

# --- LLM Providers ---
OLLAMA_HOST=http://localhost:11434
ZAI_API_KEY=your-zhipu-api-key-here
ZAI_BASE_URL=https://api.z.ai/api/paas/v4

# Cloud fallback (optional — OpenRouter gives access to many providers)
# OPENROUTER_API_KEY=your-openrouter-key

# --- Web Search ---
BRAVE_SEARCH_API_KEY=your-brave-search-key

# --- Privacy ---
ROXY_CLOUD_CONSENT_MODE=ask       # ask = confirm before cloud calls | always | never
ROXY_PII_REDACTION=true

# --- Voice ---
ROXY_WAKE_WORD=hey_roxy
ROXY_TTS_VOICE=af_heart           # Kokoro voice ID (af_heart, af_bella, am_michael, etc.)
ROXY_TTS_SPEED=1.1

# Wake Word (optional — get free key from https://console.picovoice.ai)
PORCUPINE_ACCESS_KEY=

# Audio Devices (leave empty for default)
# ROXY_AUDIO_INPUT_DEVICE=
# ROXY_AUDIO_OUTPUT_DEVICE=

# STT Configuration
# ROXY_STT_DEVICE=cpu              # cpu | cuda | auto
# ROXY_STT_VAD_THRESHOLD=0.5       # Voice activity detection threshold

# TTS Configuration
# ROXY_TTS_FALLBACK=false          # Use macOS 'say' instead of Kokoro

# --- General ---
ROXY_LOG_LEVEL=INFO
ROXY_DATA_DIR=~/roxy/data
